<div class="col-mb-12">
  <h1>My Tasks</h1>
  <%= link_to "Logout", destroy_User_session_path , method: :delete %>
    <%= link_to "Edit profile", edit_User_registration_path %>

    <div class="buffer-top">
      <%= link_to "New task", new_task_path, class: 'btn btn-primary' %>
    </div>

      <%= form_tag destroy_multiple_tasks_path  do  %>
        <ul>
          <% @tasks.each do |task| %>
           <%= check_box_tag 'tasks[]', task.id, false %>
              <li class="checkbox taskwrapper">
                <%= render partial: 'task', object: task %>
              </li>
        </ul>
      <% end %>
        <%= submit_tag "Delete selected", method: :delete, type: "submit", data: { confirm: "Are you sure?" }, class: "btn btn-danger batch-del-submit but_delete"%>
      <% end %>

    <hr />

    <% @completed_tasks.each do |task| %>
      <%= render partial: 'task', object: task %>
    <% end %>
   </div>
  </div>

